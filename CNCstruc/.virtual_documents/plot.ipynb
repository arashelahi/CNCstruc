intra_types = ["H3O_O5", "H2O_O6"]
inter_type = "H6O_O3"
layer2chains = {"L3": ["ch0"], 
            "L4": ["ch0", "ch1"], 
        "L5": ["ch0", "ch1", "ch2"], 
    "L6": ["ch0", "ch1", "ch2", "ch3"], 
        "L7": ["ch0", "ch1", "ch2"], 
            "L8": ["ch0", "ch1"], 
                "L9": ["ch0"]}

global_min = 10
global_max = -1

# f, ax = plt.subplots(len(layer2chains.keys()), figsize=(5,14))
# ax_dict = dict(zip(layer2chains.keys(), ax))
for layer in layer2chains.keys():
    layer_list = []
